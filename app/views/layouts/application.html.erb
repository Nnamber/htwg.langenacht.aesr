<html lang="en">
	<!--<![endif]-->
	<head>
		<meta charset="utf-8" />

		<!-- Uncomment to make IE8 render like IE7 -->
		<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

		<!-- Set the viewport width to device width for mobile -->
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title><%= content_for?(:title) ? yield(:title) : "Mindmailer Lite" %></title>
		<%= stylesheet_link_tag    "application" %>
		<%= javascript_include_tag "vendor/custom.modernizr" %>
		<%= csrf_meta_tags %>
	</head>

	<body>
		<% if current_user %>
		<nav class="top-bar">
			<ul class="title-area">
				<li class="name">
					<h1><%= link_to "Mindmailer Lite v1.0", courses_path%></h1>
				</li>
				<li class="toggle-topbar menu-icon">
					<a href="#"><span>Menu</span></a>
				</li>
			</ul>
			<section class="top-bar-section ">
				<ul class="right">
					<li class="divider"></li>
					<li class="name">
						<%= link_to "Quick Start"%>
					</li>
					<li class="divider"></li>
					<li>
						<%= link_to "Kurs anlegen", courses_path%>
					</li>
					<li class="divider"></li>
					<li class="has-dropdown">
						<a href="#">Thema anlegen</a>
						<ul class="dropdown">
							<li>
								<label>Kurs w√§hlen</label>
							</li>

							<li>
								<a href="#">Dropdown Level 1b</a>
							</li>
							<li>
								<a href="#">Dropdown Level 1c</a>
							</li>
							<li class="divider"></li>

							<li>
								<a href="#">See all &rarr;</a>
							</li>
						</ul>
					</li>
					<li class="divider"></li>
					<li>
						<%= link_to "Fragen anlegen", questions_path%>
					</li>
					<li class="divider"></li>
					<li>
						<%= link_to "Antworten anlegen", answers_path%>
					</li>
					<li class="divider"></li>
				</ul>
			</section>
		</nav>
		</br>
		<div class="row">
			<div class="large-12 columns">
				<dl class="sub-nav">
					<dt>
						Angemeldet als: <b><%= current_user.username %></b>
					</dt>
					<dd>
						<%= link_to "Logout", logout_path, class:"tiny button radius" %>
					</dd>
				</dl>
				<div id="error_explanation">
					<% flash.each do |name, msg| %>
					<ul>
						<li class="alert-box success large-6 round">
							<%= content_tag :div, msg, :id => "flash_#{name}" %>
						</li>
					</ul>
					<% end %>
				</div>
				<%= yield %>
			</div>
		</div>
		<%= javascript_include_tag "application" %>
		<% else %>
		</br>
		<div class="row">
			<div class="small-5 small-centered columns">
				<div id="error_explanation">
					<% flash.each do |name, msg| %>
					<ul>
						<li class="alert-box success round">
							<%= content_tag :div, msg, :id => "flash_#{name}" %>
						</li>
					</ul>
					<% end %>
				</div>
				<%= yield %>
			</div>
		</div>
		<% end %>
	</body>
</html>
